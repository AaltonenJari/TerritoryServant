/* Select the first column */
#table2 tr td:nth-child(-n + 1) {
  background-color: rgba(166,166,166,.65);
  text-align: center;
}

#table2 tr th:nth-child(1), #table2 tr th:nth-child(4), #table2 tr td:nth-child(4), #table2 tr th:nth-child(5), #table2 tr th:nth-child(6) {
  text-align: center;
}

#table2 tr td:nth-child(5), #table2 tr td:nth-child(6) {
  text-align: right;
}

#table2 tr:hover {
  background: #e6f7ff !important;
}

#table2 tr:hover td {
  background: transparent;
}

