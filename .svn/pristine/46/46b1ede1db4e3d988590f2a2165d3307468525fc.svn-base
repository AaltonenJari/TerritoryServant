/* Set a fixed scrollable wrapper */
.tableWrap {
  height: 360px;
  border: 1px solid black;
  overflow: auto;
}

/* Set header to stick to the top of the container. */
#table2 thead tr th {
  position: sticky;
  top: 0;
}

/* Because we must set sticky on th,
 we have to apply background styles here
 rather than on thead */
#table2 th {
  padding: 6px;
  padding-left: 15px;
  border-left: 1px dotted rgba(200, 209, 224, 0.6);
  border-bottom: 1px solid #e8e8e8;
  text-transform: uppercase;
  background: #00cccc;
  text-align: left;
  /* With border-collapse, we must use box-shadow or psuedo elements
  for the header borders */
  box-shadow: 0px 0px 0 2px #e8e8e8;
}

/* Basic Demo styling */
table {
  width: 100%;
  font-family: sans-serif;
}

#table2 td {
  padding: 3px;
  padding-left: 15px;
}

#table2 tbody tr {
  border-bottom: 2px solid #e8e8e8;
}

#table2 thead {
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
}

#table2 tbody tr:hover {
  background: #e6f7ff;
}

.filterArea {
  border: 1px solid black;
}

#filterArea
{
  padding-bottom: 12px;
  padding-left: 2px;	
}

#selectortable {
   border-collapse: collapse;
}

#selectortable th {
  padding: 3px;
  padding-left: 15px;
  text-align: left;
  font-family: "Arial", Times, serif;
  font-size: 15px;
}

#selectortable td {
  padding-left: 15px;
  text-align: left;
}

#selectortable tr th:nth-child(2) {
  text-align: center;
}

#selectortable tr td:nth-child(2) {
  text-align: center;
}

#selectortable tr th:nth-child(3) {
  text-align: right;
}

.middleArea {
  padding-top: 6px;
}


#bottomArea {
  /* border: 1px solid black; */
}

#bottomtable {
  border-collapse: collapse;
}

/* Test styling */
h1 {
  text-align: center;
  font-family: "Arial", Times, serif;
  font-size: 26px;
}

h2 {
  text-align: center;
  font-family: "Arial", Times, serif;
  font-size: 18px;
}

/* Select the first column */
#table2 tr td:nth-child(-n + 1) {
  background-color: rgba(166,166,166,.65);
  text-align: center;
}

#table2 tr th:nth-child(1), #table2 tr th:nth-child(4), #table2 tr td:nth-child(4), #table2 tr th:nth-child(5) {
  text-align: center;
}

#table2 tr td:nth-child(5) {
  text-align: right;
}

#table2 tr:hover {
  background: #e6f7ff !important;
}

#table2 tr:hover td {
  background: transparent;
}

